package com.manthan.Musicplayer;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class MusicPlayerImpl implements MusicPlayerDao {

	@Override
	public MusicPlayerInfoBean searchsongs(int songid) {
		
		return null;
	}

	@Override
	public boolean addsongs(MusicPlayerInfoBean infoBean) {
		
		
		Connection con = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		boolean isadded = false;



		try {
			Class.forName("com.mysql.jdbc.Driver");
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/MusicPlayer", "root", "root");

			
			String query = "insert into  MusicFiles values(?,?,?,?,?,?)";
			pstmt = con.prepareStatement(query);
			
			pstmt.setInt(1, infoBean.getSongid());
			pstmt.setString(2, infoBean.getSongtitle());
			pstmt.setString(3, infoBean.getSongtitle());
			pstmt.setString(4, infoBean.getAlbumname());
			pstmt.setString(5, infoBean.getSongLocation());
			pstmt.setString(6, infoBean.getDescription());
			

			// rs=pstmt.executeQuery();
			int n = pstmt.executeUpdate();

			if (n > 0) {
				isadded = true;
			}

		
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				if (rs != null) {
					rs.close();
				}
				if (pstmt != null) {
					pstmt.close();
				}
				if (con != null) {
					con.close();
				}
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		
		return false;
	}

	@Override
	public boolean Update(int songid, String songtitle, String Artistname, String Albumname, String SongLocation,
			String Location) {
		
		return false;
	}

	@Override
	public boolean delete(int songid) {
		
		return false;
	}

}
